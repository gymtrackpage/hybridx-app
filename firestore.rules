rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Any authenticated user can read programs, but no one can write them.
    match /programs/{programId} {
      allow read: if request.auth != null;
      allow write: if false; // Lock down writes for now
    }
    
    // Users can create, read, and update their own workout sessions.
    match /workoutSessions/{sessionId} {
      allow read, update: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
