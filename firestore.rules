
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own data, but any authenticated user can read.
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      allow create, update: if request.auth.uid == userId;
    }
    
    // All authenticated users can read programs. Writes are disallowed from clients.
    match /programs/{programId} {
      allow read: if request.auth.uid != null;
      allow write: if false; // Protect against client-side writes
    }
    
    // Users can only manage their own workout sessions.
    match /workoutSessions/{sessionId} {
      allow read, update: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
